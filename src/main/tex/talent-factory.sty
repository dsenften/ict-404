    \centering
    \mode<presentation>{\includegraphics[height=7cm]{images/#1.png}}
    \mode<article>{\includegraphics[width=12cm]{images/#1.png}}
    \mode<article>{\caption{#2}}
    \label{fig:#1}
\end{figure}
}

